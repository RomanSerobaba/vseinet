<a href="#" class="mob-top-btn"></a>

{% if app.userIdentity.isClient %}
    <a href="/complaint/" class="bttn light claim">Жалоба директору</a>
{% endif %}
    
<nav>
    {{ render(controller('SiteBundle:Cart:getInfo')) }}
    {{ render(controller('SiteBundle:Favorite:getInfo')) }}
    <a href="{{ path('order_status_check') }}" class="status" data-popup="Status">Статус заказа</a>
    {% if app.userIdentity.isEmployee and app.user.data is not empty %}
        {% if not app.user.data.isFired and app.user.data.ipAddress == '91.144.176.242' %}
            <a  
                href="{{ path('index') }}admin/clockInOut/?action={% if app.user.data.clockInTime %}rest{% else %}work{% endif %}" 
                onclick="if(!confirm('Выполнить {% if app.user.data.clockInTime %}выход{% else %}вход{% endif %}?'))return false" 
                id="clock-in-out" 
                class="{% if app.user.data.clockInTime %}work{% else %}rest{% endif %}"
                title="{% if app.user.data.clockInTime %}{{ app.user.data.clockInTime|date('%H:%M') }}{% endif %}"
            >
            </a>
        {% endif %}
        {% if app.userIdentity.isContenter %}
            <a href="{{ path('index') }}admin/contentStats/" class="employee-statistics">Статистика</a>   
        {% else %}  
            <a href="{{ path('index') }}admin/" class="employee-cabinet" title="Личный кабинет сотрудника">ЛК сотрудника</a>
        {% endif %}
    {% endif %}
</nav>

<div class="auth">
    {% if app.userIdentity.isAuthorized %}
        <a href="{{ path('account') }}">{{ app.user.person.firstname }}</a> | <a href="{{ path('logout') }}">Выйти</a>   
    {% else %}
        <a href="{{ path('login') }}" id="login-form-trigger">Вход</a> или <a href="{{ path('registr') }}">регистрация</a>
    {% endif %}
</div>

