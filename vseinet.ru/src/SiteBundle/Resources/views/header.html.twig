{% set representative = app.representative %}
<ul class="location">
    <li><em>Ваш город</em></li>
    <li>
        <a 
            href="javascript:void(0)" 
            class="ajax city" 
            data-popup="City" 
            data-rid="{{ representative.regionId }}" 
            data-cid="{{ representative.cityId }}" 
        >
            {{ representative.cityName }}
        </a>
        {% if representative.countPoints %}
            и еще 
            <a href="javascript:void(0)" class="ajax" data-popup="City">
                {{ representative.countPoints }} {{ representative.countPoints|declension('пункт;пункта;пунктов') }} по области
            </a>
        {% endif %}
    </li>
    <li class="phone">
        <strong>{{ representative.phoneTop1 }}</strong>
        <br />
        {% if representative.phoneTop2 %}
            <strong>{{ representative.phoneTop2 }}</strong>
        {% endif %}
        <span class="time">
            <a href="/contacts/{$representative->pointId}/">{{ representative.schedule }}</a>
        </span>
    </li>
    <li>
        <a href="/contacts/" class="black address">Адреса магазинов</a>
        {% if representative.countNewPoints %}
            <span class="new">
                +{{ representative.countNewPoints }} {{ representative.countNewPoints|declension('новый;новых') }}! 
            </span>
        {% endif %}
    </li>
</ul>

