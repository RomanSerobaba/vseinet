{{ form_start(form, { action: path('product_set_price', { id: command.id }) }) }}

<div class="row h">
    {{ form_label(form.price, 'Цена') }}
    {{ form_widget(form.price, { attr: { class: 'txt' }}) }}
</div>

<div class="row h">
    {{ form_label(form.type, 'Тип цены' ) }}
    {% for choice in form.type.vars.choices %}
        <input type="radio" id="{{ form.type.vars.id }}_{{ choice.value }}" name="{{ form.type.vars.full_name }}" value="{{ choice.value }}"{% if choice.value == form.type.vars.value or loop.index is same as(1) and form.type.vars.value is empty %} checked="checked"{% endif %} />
        {{ choice.label }}<br/>
    {% endfor %}
</div>

<div class="row h">
    {{ form_widget(form.submit, { label: 'Установить', attr: { class: 'bttn blue' }}) }}
    {{ form_widget(form._token) }}
</div>

{{ form_end(form, { render_rest: false }) }}
