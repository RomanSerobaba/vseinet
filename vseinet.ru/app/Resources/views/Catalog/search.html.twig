{% extends "layout.html.twig" %}

{% block pageTitle %}Поиск в интернет-магазине Vseinet.ru{% endblock %}

{% block content %}
    <section id="category" class="search">
        <div class="breadcrumbs">
            <a href="{{ path('catalog') }}">Каталог</a>
        </div>
        <div class="title category-title">
            <h1>Результаты поиска</h1>
            {% set total = facets.total %}
            {% if total == 0 %}
                {% set total = products|length %}
            {% endif %}
            <small id="products-total">{{ total }}{% if total == 10000 %}+{% endif %} {{ total|declension('товар;товара;товаров') }}</small>
        </div>
        <div class="mobile-filter-box">
            <div class="mobile-filter-btn">
                <a href="#" class="bttn light">Показать фильтры по параметрам <span class="hide">Показать фильтры</span></a>
            </div>
            <nav class="sort" id="sorting">
                {% include 'Catalog/sorting.html.twig' %}
            </nav>
        </div>
        <div id="category">
            <nav id="nav">
                {% if facets.total > 0 %}
                    {% include 'Catalog/filter.html.twig' %}
                {% else %}
                    {% if app.userIsProgrammer %}
                        <p style="color:red;font-size:14px">
                            Вывести блок
                        </p>
                    {% endif %}
                {% endif %}
            </nav>
            <div class="wrapper">
                <div id="main-categories">
                    {% include 'Catalog/filter_main_categories.html.twig' %}
                </div>
                {% include 'Catalog/products.html.twig' %}
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {% include 'Catalog/filter.js.twig' %}
{% endblock %}
