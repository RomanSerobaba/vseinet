{% extends "layout.html.twig" %}

{% block pageTitle %}
    Восстановление пароля
{% endblock %}

{% block content %}
    <h1>Восстановление пароля</h1>
    <div class="block gray w40p">
        <div class="wrapper">

            {{ form_start(form, { action: path('check_token'), attr: { id: 'check-form', novalidate: true }}) }}

            <div class="row{% if errors.check_token_code is defined %} error{% endif %}">
                {{ form_label(form.code, 'Код подтвержения:') }}
                {{ form_widget(form.code, { attr: { class: 'txt' }}) }}
                {% if errors.check_token_code is defined %}
                    <div class="error">{{ errors.check_token_code.0 }}</div>
                {% endif %}
            </div>

            <div class="row">
                <a href="{{ path('forgot') }}">Выслать еще раз</a>
            </div>

            <div class="row">
                {{ form_widget(form.submit, { label: 'Восстановить пароль', attr: { class: 'bttn blue r' }}) }}
                {{ form_widget(form._token) }}
            </div>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}


