{% block javascripts %}
<script>
    $(function() {
        var hash = window.location.hash, active = $('a[data-hash=' + hash + ']').parent().index();
        $('#about').tabs({
            active: active > -1 ? active : 0,
            beforeLoad: function(event, ui) {
                return false;
            },
            beforeActivate: function(event, ui) {
                window.location = ui.newTab.find('a').data('hash');
            }
        });
    });
</script>
{% endblock %}

