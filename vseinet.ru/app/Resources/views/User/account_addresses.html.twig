<div class="block">
    <div class="wrapper" id="user-addresses">
        <h2>Адреса доставки</h2>
        <table class="account-table">
            <thead>
                <tr>
                    <td>Адрес</td>
                    <td class="floor">Этаж</td>
                    <td class="lift">Лифт</td>
                    <td class="blank"></td>
                </tr>
            </thead>
            <tbody>
                {% for address in account.addresses %}
                    {% include 'User/address.html.twig' with { address: address } %}
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('user_address_add') }}" class="address-add address-edit">Добавить адрес</a>
    </div>
</div>
