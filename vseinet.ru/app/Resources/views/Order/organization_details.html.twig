<fieldset class="block">
    <div class="wrapper">
        <h2>Реквизиты организации</h2>
        <div class="row h">
            <label>Приобрести товар:</label>
            <div class="value">
            <label for="withVat_0">
                без НДС
                <input type="radio" id="create_form_withVat_0" name="create_form[withVat]" value="0" required="required"{% if (not form.withVat.vars.value)  %} checked="checked"{% endif %} />
            </label>
            <label for="create_form_withVat_1">
                с НДС
                <input type="radio" id="create_form_withVat_1" name="create_form[withVat]" value="1" required="required"{% if (form.withVat.vars.value)  %} checked="checked"{% endif %} />
            </label>
            </div>
        </div>
        <div class="row h">
            {{ form_label(form.tin, 'ИНН:') }}
            {{ form_widget(form.tin, { attr: { class: 'txt', maxlength: 12 }}) }}
        </div>
        <div class="row h">
            {{ form_label(form.kpp, 'КПП:') }}
            {{ form_widget(form.kpp, { attr: { class: 'txt', maxlength: 9 }}) }}
        </div>
        <div class="row h">
            {{ form_label(form.counteragentName, 'Наименование организации:') }}
            {{ form_widget(form.counteragentName, { attr: { class: 'txt' }}) }}
        </div>
        <div class="row h">
            {{ form_label(form.counteragentLegalAddress, 'Юридический адрес:') }}
            {{ form_widget(form.counteragentLegalAddress, { attr: { class: 'txt' }}) }}
        </div>
        <div class="row h">
            {{ form_label(form.counteragentSettlementAccount, 'Расчетный счет:') }}
            {{ form_widget(form.counteragentSettlementAccount, { attr: { class: 'txt', maxlength: 20 }}) }}
        </div>
        <div class="row h">
            {{ form_label(form.bic, 'БИК:') }}
            {{ form_widget(form.bic, { attr: { class: 'txt', maxlength: 9 }}) }}
        </div>
    </div>
</fieldset>
