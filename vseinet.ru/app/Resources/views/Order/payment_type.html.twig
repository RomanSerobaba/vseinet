<fieldset class="block">
    <div class="wrapper">
        <h2>Способ оплаты <small style="color:red">Обратите внимание! По заказу возможно потребуется предоплата.</small></h2>
        {% for choice in form.paymentTypeCode.vars.choices %}
        <div class="row v">
            <label for="{{ form.paymentTypeCode.vars.id }}_{{ choice.value }}">
                {{ choice.label }}
                <input type="radio" id="{{ form.paymentTypeCode.vars.id }}_{{ choice.value }}" name="{{ form.paymentTypeCode.vars.full_name }}" value="{{ choice.value }}" required="required"{% if (choice.value == form.paymentTypeCode.vars.value)  %} checked="checked"{% endif %} />
            </label>
        </div>
        {% if constant('AppBundle\\Enum\\PaymentTypeCode::CREDIT') == choice.value %}
        <div class="row h subrow">
            {{ form_label(form.creditDownPayment, 'Первоначальный взнос:') }}
            {{ form_widget(form.creditDownPayment, { attr: { class: 'txt' }}) }}
        </div>
        {% endif %}
        {% endfor %}
    </div>
</fieldset>
