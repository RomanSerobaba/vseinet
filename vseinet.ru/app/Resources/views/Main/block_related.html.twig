{% if not products is empty %}
    <section class="wrapper" id="related">
        <h3>С этим товаром покупают</h3>
        <div id="related_content">
            {% for product in products %}
                <div class="product">
                    <a href="{% if product.sefUrl %}{{ url('catalog_product_sef', { slug: product.sefUrl }) }}{% else %}{{ url('catalog_product', { id: product.id }) }}{% endif %}" class="image">
                        <img
                            data-src="{{ product|image(constant('AppBundle\\Enum\\BaseProductImage::SIZE_SM')) }}"
                            alt="{{ product.name }}. Интернет-магазин Vseinet.ru Пенза"
                            class="lazyload"
                        />
                    </a>
                    <h6><a href="{% if product.sefUrl %}{{ url('catalog_product_sef', { slug: product.sefUrl }) }}{% else %}{{ url('catalog_product', { id: product.id }) }}{% endif %}">{{ product.name }}</a></h6>
                    <strong class="price">{{ product.price|price_format }} <span class="RUR">Р</span></strong>
                </div>
            {% endfor %}
        </div>
    </section>
{% endif %}
