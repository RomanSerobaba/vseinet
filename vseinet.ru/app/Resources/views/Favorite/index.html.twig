{% extends "layout.html.twig" %}

{% block pageTitle %}Избранное в интернет-магазине Vseinet.ru{% endblock %}

{% block content %}
    <div id="user-account">
        {% include 'User/account_menu.html.twig' with { active: 'favorite' } %}
        <h1 style="display:inline-block">Избранное</h1>
        <small style="position: relative; top: -2px; color: #999; font-size: 12px; font-weight: 400; white-space: nowrap; margin-left: 5px;">{{ favorites|length }} {{ favorites|length|declension('товар;товара;товаров') }}</small>
        <div id="favorite">
            {% include 'Favorite/page.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
$(function() {
    $('#user-account').tabs({
        active: 2,
        beforeActivate: function(event, ui) {
            window.location = ui.newTab.find('a').prop('href');
            return false;
        }
    });
});
</script>
{% endblock %}

